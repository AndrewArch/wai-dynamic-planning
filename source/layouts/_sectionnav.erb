<nav class="section">
  <h2>Sections</h2>
  <p><%= link_to site['title'], "../" %></p>
  <ul>
    <% data.structure.each do |tag, section| %>
    <li><% if is_current? "/#{tag}/" %><i class="fa fa-<%= section.icon %>"></i><%= section.label %><% else %><%= link_to "<i class='fa fa-#{section.icon}'></i>#{section.label}", "../#{tag}/" %><% end %></li>
    <% end %>
  </ul>
</nav>