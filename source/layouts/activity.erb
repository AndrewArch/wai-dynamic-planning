<% wrap_layout :layout do %>
  <h2 class="attach_permalink"><%= current_page.data.title %></h2>
  <div class="inner">
    <div class="yield">
      <%= yield %>
      <% if current_page.data.prev or current_page.data.next %>
      <div class="prev_next">
        <% if current_page.data.next %>
          <p class="next"><span>Next:</span> <%= link_to(current_page.data.next.title, current_page.data.next.url) %></p>
        <% end %>
      </div>
      <% end %>
      <p><%= link_to('Return to ' + current_page.data.parent, 'index.html') %></p>
    </div>
  
    <div class="support_material">
      <% if content_for?(:resources) %>
      <aside id="resources">
        <h3>Key Resources</h3>
        <%= yield_content :resources %>
      </aside>
      <% end %>

      <% if content_for?(:related) %>
      <aside id="related">
        <h3>Related Activities</h3>
        <%= yield_content :related %>
      </aside>
      <% end %>
    </div>
  </div>
<% end %>